/* pages/member/order/order.wxss */
@import "/pages/project/detail/pay/pay.wxss";
page{
  background-color:#fff;
}
.order {
  width: 690rpx;
  height: 410rpx;
  box-shadow: 0rpx 2rpx 10rpx 0rpx rgba(0, 0, 0, 0.2);
  border-radius: 4rpx;
  background-color: #fff;
  margin: 30rpx 30rpx 0rpx 30rpx;
}

.order-title {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 15rpx 30rpx;
}

.order-title-number {
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
}

.order-title-wait {
  font-size: 28rpx;
  color: #f88e5c;
  line-height: 40rpx;
}
.order-title-paied{
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
}

.order-cnt {
  padding: 30rpx;
}

.order-cnt-cnt {
}

.order-cnt-h-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 4rpx;
}

.order-cnt-txt {
  display: flex;
  justify-content: space-between;
  width: 470rpx;
  margin-left:30rpx;
}

.order-cnt-h {
  display: flex;
}
.order-cnt-name{
margin-top:10rpx;
font-size:28rpx;
color:#333;
line-height:40rpx;
}
.order-cnt-cate{
font-size:28rpx;
margin-top:10rpx;
color:#999;
line-height:40rpx;
}

button {
  width: 242rpx;
  height: 92rpx;
  background-color: #f88e5c;
  color: #fff;
  font-size: 32rpx;
  line-height: 92rpx;
  margin-left:76rpx;
}

.order-add {
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;

}

.order-footer {
  display: flex;
  align-items: center;
  margin-top:16rpx;
  height:92rpx;
}

.order-footer-times {
  font-size: 24rpx;
  color: #999;
  line-height: 33rpx;
   white-space: nowrap;
}
.order-mask{
  position: fixed;
  top:0;
  left: 0;
  bottom:0;
  width: 100%;
  background-color:#333;
  z-index: 2;
  opacity: 0.5;
}
.order-pop{
  position: fixed;
  z-index: 3;
  bottom:0;
  left:0;
  width:100%;
  background-color:#FAFAFA;
}
.order-pay-nav{
    width:100%;
  height:120rpx;
  background-color:#fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-pay-cnt{
  margin-bottom:60rpx;
}
.order-pay-way{
  padding:30rpx;
  margin:0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-closeIcon{
  width:28rpx;
  height:28rpx;
}
.order-none-icon{
  width:288rpx;
  height:288rpx;
  margin-top:142rpx;
}
.order-none-txt{
font-size:36rpx;
color:#999;
line-height:50rpx;
margin-top:50rpx;
}
.order-none-btn{
 width:420rpx;
height:90rpx;
background:linear-gradient(360deg,rgba(240,117,58,1) 0%,rgba(254,159,113,1) 100%);
border-radius:12rpx;
margin:121rpx 0rpx 0rpx 0rpx;
}
.order-none{
  display: flex;
  flex-direction: column;
  align-items: center;
}