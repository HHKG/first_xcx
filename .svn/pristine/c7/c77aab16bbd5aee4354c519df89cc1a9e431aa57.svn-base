/* pages/member/cash/cash.wxss */

page {
  background-color: #fafafa;
}

.cash-h {
  height: 334rpx;
  background-color: #3a8782;
  padding: 63rpx 30rpx 0rpx 30rpx;
}

.cash-h-cnt {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 45rpx;
}

.cash-h-txt1 {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 40rpx;
}

.cash-h-txt2 {
  font-size: 32rpx;
  color: #fff;
  line-height: 45rpx;
}

.cash-h-num {
  font-size: 108rpx;
  color: #fff;
  line-height: 151rpx;
  margin-top: 60rpx;
}

button {
  width: 690rpx;
  height: 90rpx;
  background: linear-gradient(360deg, rgba(240, 117, 58, 1) 0%, rgba(254, 159, 113, 1) 100%);
  box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(240, 117, 58, 1);
  border-radius: 12rpx;
  color: #fff;
  font-size: 36rpx;
  line-height: 90rpx;
  margin-top: 61rpx;
}

.cash-bind-icon {
  width: 49rpx;
  height: 36rpx;
}

.cash-bind-txt {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
}

.cash-bind-right {
  width: 18rpx;
  height: 33rpx;
}

.cash-bind {
  margin-top:195rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background-color: #fff;
  padding: 0rpx 30rpx;
}

.cash-left {
  display: flex;
  align-items: center;
}
