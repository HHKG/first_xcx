/* pages/member/cash/authentication/withdraw/withdraw.wxss */

page {
  background-color: #fafafa;
}

.wit-title {
  padding: 21rpx 30rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 45rpx;
}

.wit-bank-icon {
  width: 60rpx;
  height: 44rpx;
}

.wit-h {
  display: flex;
  align-items: center;
  height: 152rpx;
  background-color: #fff;
  padding-left: 30rpx;
}

.wit-bank {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.wit-bank-name {
  font-size: 36rpx;
  color: #333;
  line-height: 50rpx;
}

.wit-bank-num {
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
  margin-top: 13rpx;
}

.wit-cnt {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}

.wit-cnt-h {
  font-size: 32rpx;
  color: #333;
  line-height: 45rpx;
  height: 45rpx;
}

.wit-cnt-tips {
  font-size: 28rpx;
  color: #666;
  line-height: 45rpx;
}

.wit-cnt-input {
  margin-top: 24rpx;
  display: flex;
  height: 135rpx;
  font-size: 72rpx;
  color: #333;
  line-height: 135rpx;
  position: relative;
  padding-bottom: 24rpx;
}

.wit-cnt-input::after {
  position: absolute;
  right: 30rpx;
  left: 30rpx;
  bottom: 0;
  content: '';
  display: inline-block;
  border-bottom: 1rpx solid #e0e0e0;
}

input {
  height: 135rpx;
  font-size: 96rpx;
  color: #333;
  line-height: 135rpx;
}

.wit-cnt-footer {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
}

button {
  width: 690rpx;
  height: 90rpx;
  background: linear-gradient(360deg, rgba(240, 117, 58, 1) 0%, rgba(254, 159, 113, 1) 100%);
  box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(240, 117, 58, 1);
  border-radius: 12rpx;
  color: #fff;
  font-size: 36rpx;
  line-height: 90rpx;
  margin-top: 32rpx;
}

button:active {
  color: #fff !important;
}
