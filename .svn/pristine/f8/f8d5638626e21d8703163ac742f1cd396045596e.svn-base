                        wx.setStorageSync('token', data.data.token);
                      }else{
                        console.log(data.data);
                        wx.setStorageSync('mobile', data.data.mobile);
                        wx.navigateTo({
                          url: '../login/autho',
                        })
                      }
                    }
                  }
                })
        
        }
      }
    })
    console.log(e.detail.errMsg)
