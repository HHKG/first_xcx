  /**
   * 轮播图滑动触发的事件
   */
  changeDot: function (event) {
    var dotActive = event.currentTarget.dataset.dotactive;
    var current = event.detail.current;
    if (current == 0) {
      this.setData({
        className0: dotActive,
        className1: "",
        className2: "",
        className3: ""
      })
    }
    if (current == 1) {
      this.setData({
        className0: "",
        className1: dotActive,
        className2: "",
        className3: ""
      })
    }
    if (current == 2) {
      this.setData({
        className0: "",
        className1: "",
        className2: dotActive,
        className3: ""
      })
    }
    if (current == 3) {
      this.setData({
        className0: "",
        className1: "",
        className2: "",
        className3: dotActive
      })
    }
  }
