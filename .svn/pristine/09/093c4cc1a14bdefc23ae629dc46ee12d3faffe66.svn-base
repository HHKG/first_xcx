/* pages/member/consumerGold/consumerGold.wxss */

page {
  background-color: #fafafa;
}

.con-cnt {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 30rpx;
}

.con-cnt-txt1 {
  display: flex;
  flex-direction: column;
}

.con-cnt::after {
    position: absolute;
    right: 30rpx;
    bottom: 0;
    left: 30rpx;
    height: 1px;
    content: '';
    background-color: #fafafa;
}

.con-cnt-balance {
  font-size: 32rpx;
  color: #333;
  line-height: 45rpx;
}

.con-cnt-time {
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
  white-space: nowrap;
  margin-top: 10rpx;
}

.con-cnt-add {
  display: flex;
  font-size: 42rpx;
  color: #faa24e;
  line-height: 48rpx;
  align-items: center;
}
.con-cnt-cut{
  display: flex;
font-size:42rpx;
color:#333;
line-height:48rpx;
align-items: center;
}
.con-none{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:123rpx;
}
.con-none-icon{
  width:260rpx;
  height:244rpx;
}
.con-none-txt{
  margin-top:30rpx;
font-size:36rpx;
color:#333;
line-height:50rpx;
}